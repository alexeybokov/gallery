#gallery
  %h2
    #{Category.find(params[:id]).title}

  - if @images.exists?
    - @images.each_slice(4) do |image|
      %div
        .row
          - image.each do |image|
            .col-mid-3
              .photo.photo-type-line
                %a.photo-hover{"data-title" => image.name, :href => image_path(image)}
                  .photo-info
                    .headline= image.name
                    .line
                    .desc= image.category.title
                    .mask
                  .photo-img
                    = image_tag image.picture.thumb.url
  - else
    %p There are no images

  - if current_user.following?(@category)
    = button_to "UnFollow", {action: 'unfollow'}, method: 'put', class: 'btn btn-light', remote: true
  - else
    = button_to "Follow", {action: 'follow'}, method: 'put', class: 'btn btn-light', remote: true

#paginate
  =paginate @images
