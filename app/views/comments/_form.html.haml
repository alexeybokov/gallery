.container
%form
  .form-group
    %label{:for => "comment"} Comment:
    = form_for([@image, @image.comments.build]) do |f|
      .field
        .form
          = f.text_area :body, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }
        = f.submit (t('comments._form.add_comment')),class: 'btn btn-secondary'

  .container
  %form
    .form-group
      %label{:for => "comment"} Comment:
      %textarea#comment.form-control{:rows => "5"}
