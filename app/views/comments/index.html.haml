%h2
  = t('comments.index.show')

- @comments.each do |comment|
  %br/
  .commentlistitem
    = image_tag(comment.image.picture.small.url)
    .commentlistitem
      = t('comments.index.comment')
      = ": '#{comment.body}'"
    .commentlistitem
      = t('.user')
      = ": '#{comment.user.email}'"
    %br/
#paginate
  = paginate @comments


