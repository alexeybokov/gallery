.slider_container
  - if @images.exists?
    %p{:style => "max-width: 520px;"}
      %a{"data-fancybox-trigger" => "preview"}
        .image_container
        = image_tag @images.last.picture.large.url, class: 'img'

    %p.imglist
      = @images.last(4).each_slice(4) do |image|
        - image.each do |image|
          %a{"data-fancybox" => "preview", "data-height" => "1000", "data-width" => "1500",:href => image.picture.thumb.url}
            = image_tag image.picture.thumb.url, class: 'img_slider'
  - else
    %p
      .title
        = t('images.index.no_images')
