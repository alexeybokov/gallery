<div class="section">
<%= simple_form_for @image do |i| %>
  <div class="field">
    <div class="control">
      <%= i.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <%= i.button :submit, 'Create new image', class: "button is-primary" %>
<% end %>
</div>
