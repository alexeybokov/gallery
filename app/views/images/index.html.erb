<% content_for :page_title,  "Index" %>

<div class="section">
  <div class="container">
    <% @images.each do |image| %>
        <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4"><%= link_to image.name, image  %></p>
          </div>
        </div>
        <div class="content">
             <%= image.name %>
        </div>
        <div class="comment-count">
            <span class="tag is-rounded"><%= image.comments.count %> comments</span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
